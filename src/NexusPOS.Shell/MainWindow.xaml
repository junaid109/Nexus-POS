<Window x:Class="NexusPOS.Shell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NexusPOS.Shell"
        xmlns:views="clr-namespace:NexusPOS.Shell.Views"
        xmlns:vm="clr-namespace:NexusPOS.Shell.ViewModels"
        mc:Ignorable="d"
        Title="NexusPOS" Height="768" Width="1024"
        WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize"
        Background="{StaticResource BackgroundGrayBrush}">
    
    <!-- DataTemplates for ViewModels -->
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:HelloViewModel}">
            <views:HelloView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:StaffAccessViewModel}">
            <views:StaffAccessView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CustomerLookupViewModel}">
            <views:CustomerLookupView/>
        </DataTemplate>
        <!-- Future DataTemplates for ScanViewModel, etc. -->
    </Window.Resources>

    <Grid Margin="40">
        <!-- Content Presenter displays the CurrentViewModel using the defined DataTemplates -->
        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
